{% extends 'main.html' %}
{% block title %}
<h1>Avita</h1>
<h2>Вход</h2>
{% endblock %}
{%  block style %}
        <link href="{{ '/static/styles/auth.css' }}" rel="stylesheet" type="text/css">
{%  endblock %}
{% block content %}
    <form method="POST" action="">
        {{ form.csrf_token }}
        <div class="form-group">
            {{ form.email.label }} {{ form.email(class="form-control") }}
        <a href="{{ url_for('reset_password_start') }}">Забыли пароль?</a>
            {% for error in form.email.errors %}
                <span class="text-danger">{{ error }}</span>
            {% endfor %}
        </div>
        <div class="form-group">
            {{ form.password.label }} {{ form.password(class="form-control") }}
            {% for error in form.password.errors %}
                <span class="text-danger">{{ error }}</span>
            {% endfor %}
        </div>
        {{ form.submit(class="btn btn-primary") }}
    </form>
    <a href="{{ url_for('login_via_oauth',app='vk') }}"><img id='Vk ' src="/static/imgs/VK.png"></a>
    <a href="{{ url_for('login_via_oauth',app='github') }}"><img id='Github ' src="/static/imgs/GitHub.png"></a>
{% endblock %}